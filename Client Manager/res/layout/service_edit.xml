<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
     android:scrollbars="vertical" 
     android:layout_height="fill_parent" 
     android:layout_width="fill_parent">
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<!-- NAME CONTAINER -->
	<TableRow>
		<TextView android:id="@+id/serviceNameTitle" 
			android:paddingLeft="10sp"
			android:paddingRight="10sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textSize="14sp"
			android:text="@string/serviceNameTitle"
			android:layout_weight="1"/>
 		<EditText android:id="@+id/serviceName" 
			android:layout_width="80dip"
			android:textSize="14sp"
			android:layout_height="35dip" 
			android:layout_weight="1"/>
		</TableRow>
		<!-- END NAME CONTAINER -->
		
		<!-- PRICE CONTAINER -->
		<TableRow>
		<TextView android:id="@+id/serviceDollarTitle" 
			android:layout_below="@+id/serviceName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textSize="14sp"
			android:text="@string/serviceDollarTitle"
			android:layout_weight="1"/>
		<EditText android:id="@+id/serviceDollar" 
			android:layout_width="100dip"
			android:layout_height="35dip" 
			android:paddingLeft="10sp"
			android:textSize="14sp"
			android:layout_weight="1"/>
			</TableRow>
		<!-- END PRICE CONTAINER -->
		
		<!-- TIME CONTAINER -->
		<TableRow>
		<TextView
			android:id="@+id/serviceTimeTitle1" 
			android:paddingLeft="10sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/time" />
		<EditText android:id="@+id/serviceTime"
			android:layout_width="90dip"
			android:layout_height="35dip"
			android:paddingLeft="10sp"
			android:textSize="14sp" 
			android:layout_weight="1"/>
		</TableRow>
		<!-- END TIME CONTAINER -->
		
		<!-- NOTE CONTAINER -->
		<TableRow>
		<TextView
			android:id="@+id/serviceNoteTitle1" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/note" />
		<EditText android:id="@+id/serviceNote"
			android:layout_width="90dip"
			android:layout_height="35dip" 
			android:paddingLeft="10sp"
			android:textSize="14sp" 
			android:layout_weight="1"/>
		</TableRow>	
		<!-- END NOTE CONTAINER -->
				
		<!-- BUTTON CONTAINER -->
		<TableRow>
		<Button android:id="@+id/confirm2" 
			android:text="@string/confirm"
			android:layout_width="wrap_content"
			android:layout_height="36dip" />
		<Button android:id="@+id/delete2" 
			android:text="@string/delete"
			android:layout_width="wrap_content"
			android:layout_height="36dip" />
		</TableRow>
		<!-- END BUTTON CONTAINER -->

</TableLayout>
   </ScrollView> 
  